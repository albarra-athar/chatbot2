<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chatbot Tugas Kuliah</title>

    <!-- Dialogflow Messenger -->
    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>

    <style>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, sans-serif;
        background: #f3f4f6;
        color: #111827;
      }
      .container {
        max-width: 980px;
        margin: 0 auto;
        padding: 40px 20px 80px;
      }
      h1 {
        margin: 0 0 8px;
        font-size: 28px;
      }
      .subtitle {
        margin: 0 0 22px;
        color: #4b5563;
      }
      .card {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 18px;
        margin-bottom: 16px;
      }
      .card h2 {
        margin: 0 0 12px;
        font-size: 16px;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 10px;
      }
      button[data-example] {
        text-align: left;
        background: #eef2f7;
        border: 1px solid #d1d5db;
        border-radius: 10px;
        padding: 12px 12px;
        cursor: pointer;
        font-size: 14px;
        line-height: 1.35;
      }
      button[data-example]:hover {
        background: #e5e7eb;
      }
      .note {
        margin-top: 10px;
        font-size: 13px;
        color: #6b7280;
      }

      /* Tema DF Messenger (abu-abu terang) */
      df-messenger {
        --df-messenger-chat-background-color: #ffffff;
        --df-messenger-font-color: #111827;

        --df-messenger-bot-message: #f3f4f6;
        --df-messenger-bot-message-font-color: #111827;

        --df-messenger-user-message: #e5e7eb;
        --df-messenger-user-message-font-color: #111827;

        --df-messenger-button-titlebar-color: #374151;
        --df-messenger-button-titlebar-font-color: #ffffff;

        --df-messenger-input-box-color: #ffffff;
        --df-messenger-input-font-color: #111827;
        --df-messenger-input-placeholder-font-color: #6b7280;

        --df-messenger-send-icon: #2563eb;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>ðŸ“š Chatbot Tugas Kuliah</h1>


      <!-- ADD TASK: selalu ada course + date-time + title -->
      <div class="card">
        <h2>âž• Tambah tugas (pasti masuk DB)</h2>
        <div class="grid">
          <button
            data-example="Tambah tugas Quiz 1 untuk Kalkulus tanggal 20 Desember 2025 jam 10:00 prioritas tinggi"
          >
            Tambah tugas Quiz 1 untuk Kalkulus tanggal 20 Desember 2025 jam 10:00 prioritas tinggi
          </button>

          <button
            data-example="Tambah tugas Laporan Praktikum untuk Fisika Dasar tanggal 22 Desember 2025 jam 19:00 prioritas sedang"
          >
            Tambah tugas Laporan Praktikum untuk Fisika Dasar tanggal 22 Desember 2025 jam 19:00 prioritas sedang
          </button>

          <button
            data-example="Tambah tugas Resume Bab 3 untuk Sistem Digital tanggal 5 Januari 2026 jam 08:30 prioritas rendah"
          >
            Tambah tugas Resume Bab 3 untuk Sistem Digital tanggal 5 Januari 2026 jam 08:30 prioritas rendah
          </button>
        </div>

        <div class="note">
          Format yang paling aman untuk demo: <b>tanggal DD Bulan YYYY jam HH:MM</b>.
        </div>
      </div>

      <!-- LIST BY COURSE -->
      <div class="card">
        <h2>ðŸ“‹ Cek tugas per mata kuliah</h2>
        <div class="grid">
          <button data-example="Tugas Kalkulus apa saja?">
            Tugas Kalkulus apa saja?
          </button>
          <button data-example="Tugas Fisika Dasar yang belum selesai apa saja?">
            Tugas Fisika Dasar yang belum selesai apa saja?
          </button>
          <button data-example="Tugas Sistem Digital apa saja?">
            Tugas Sistem Digital apa saja?
          </button>
        </div>
      </div>

      <!-- LIST BY DATE -->
      <div class="card">
        <h2>ðŸ“… Cek tugas berdasarkan tanggal</h2>
        <div class="grid">
          <button data-example="Tugas yang due tanggal 20 Desember 2025 apa?">
            Tugas yang due tanggal 20 Desember 2025 apa?
          </button>
          <button data-example="Tugas yang due tanggal 22 Desember 2025 apa?">
            Tugas yang due tanggal 22 Desember 2025 apa?
          </button>
          <button data-example="Tugas yang due tanggal 5 Januari 2026 apa?">
            Tugas yang due tanggal 5 Januari 2026 apa?
          </button>
        </div>
      </div>

      <!-- UPDATE STATUS -->
      <div class="card">
        <h2>âœ… Update status tugas</h2>
        <div class="grid">
          <button data-example="Tandai tugas Quiz 1 selesai">
            Tandai tugas Quiz 1 selesai
          </button>
          <button data-example="Ubah status tugas Laporan Praktikum jadi in progress">
            Ubah status tugas Laporan Praktikum jadi in progress
          </button>
          <button data-example="Tandai tugas Resume Bab 3 selesai">
            Tandai tugas Resume Bab 3 selesai
          </button>
        </div>
      </div>
    </div>

    <!-- Dialogflow widget -->
    <df-messenger
      chat-title="Chatbot_Tugas_Kuliah"
      agent-id="e6380229-e150-4622-8273-ba23458ecf91"
      language-code="id"
    ></df-messenger>

    <!-- Klik contoh -> otomatis isi ke input chat -->
    <script>
      document.addEventListener("click", (e) => {
        const target = e.target;
        if (!(target instanceof Element)) return;

        const btn = target.closest("button[data-example]");
        if (!btn) return;

        const text = btn.getAttribute("data-example");
        if (!text) return;

        const messenger = document.querySelector("df-messenger");
        if (!messenger) return;

        const shadow1 = messenger.shadowRoot;
        const chat = shadow1?.querySelector("df-messenger-chat");
        const shadow2 = chat?.shadowRoot;
        const inputWrap = shadow2?.querySelector("df-messenger-user-input");
        const shadow3 = inputWrap?.shadowRoot;

        const input = shadow3?.querySelector("textarea, input");
        if (!(input instanceof HTMLInputElement || input instanceof HTMLTextAreaElement)) {
          alert("Chat belum siap. Tunggu 1â€“2 detik lalu klik lagi.");
          return;
        }

        input.value = text;
        input.dispatchEvent(new Event("input", { bubbles: true }));
        input.focus();
      });
    </script>
  </body>
</html>






